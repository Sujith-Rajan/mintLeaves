generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model carts {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @db.Date
  image     String
  price     Int
  productId String  @unique
  quantity  Int
  title     String
  total     Int
  updatedAt DateTime @db.Date
  user      User?   @relation(fields: [userId],references: [id])
  userId    String? 
  
}

model products {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  category     String
  createdAt    DateTime @db.Date
  desc         String
  image        String
  price        Int
  quantityType String
  stock        Int
  subCategory  String
  title        String   @unique(map: "title_1")
  updatedAt    DateTime @db.Date
}

model User {
  id       String  @id @default(cuid()) @map("_id")
  fullname String
  email    String  @unique
  password String
  phone    String  @unique
  avatar   String?
  role     Role    @default(USER) 
  cart     carts[]  
  address  String?
  city     String?
  state    String?
  zipCode  String?   
  order    Order[]
  feedback Feedback[]
}

enum Role {
  USER
  ADMIN
}

model Order {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  slotTime        String
  payment         Mode
  paymentSataus   Status
  amount          Float
  deliveryCharge  Int?
  disCount        Float
  user            User?   @relation(fields: [userId],references: [id])
  userId          String?
  razorpayId      String?
  orderStatus     Status
  createdAt       DateTime @default(now())

}

enum Mode {
  COD
  CARD_UPI 
}

enum Status {
  PENDING
  SUCCESS
}

model Feedback {
  id               String   @id @default(auto()) @map("_id") @db.ObjectId
  user             User?   @relation(fields: [userId],references: [id])
  userId           String
  rating           Float?  @default(1)
  ratingCount      Int?   @default(1)
  subject          String
  comment          String
  createdAt        DateTime @default(now()) 
}